%tr{:'data-deal-stage-id' => deal_stage.id}
  %td.name= deal_stage.name
  %td.color
    = deal_stage_label(deal_stage)
  %td.percentage== #{deal_stage.percent}%
  %td.row-actions
    = link_to 'Edit', [:edit, deal_stage], remote: true, class: 'edit-action'
    = link_to 'Delete', deal_stage, remote: true, method: :delete, class: 'delete-action', confirm: 'Are you sure you want to remove this deal stage?'
