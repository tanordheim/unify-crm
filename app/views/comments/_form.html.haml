= simple_form_for Comment.new, remote: true do |f|
  = hidden_field_tag 'comment[commentable_type]', commentable.class.name
  = hidden_field_tag 'comment[commentable_id]', commentable.id
  = f.input :body, as: :text
  %div.modal-footer
    = f.button :submit, 'Post', class: 'btn btn-primary'
    = link_to 'Cancel', '#', class: 'btn', :'data-dismiss' => 'modal'
