<% if comment.errors.any? -%>
  alert("Please enter a comment");
<% else -%>
  $.closeModal();
  $.getScript('/comments/<%= comment.commentable_type.underscore.pluralize %>/<%= comment.commentable_id.to_s %>', function() {
    $('tr[data-comment-id="<%= comment.id.to_s %>"] td').effect('highlight', {}, 'fast');
  });
<% end -%>
