%div#ticket-actions-wrapper
  %ul#ticket-actions.unstyled
    %li.assign-to-milestone
      %div.btn-group
        = link_to 'Set milestone', '#', class: 'btn btn-info'
        = link_to content_tag(:span, '', class: 'caret'), '#', class: 'btn btn-info dropdown-toggle', :'data-toggle' => 'dropdown'
        %ul.dropdown-menu
          %li= link_to 'No milestone', '#', :'data-milestone-id' => ''
          %li.divider
          - milestones.each do |milestone|
            %li= link_to milestone.name, '#', :'data-milestone-id' => milestone.id.to_s
    %li.set-priority
      %div.btn-group
        = link_to 'Set priority', '#', class: 'btn btn-info'
        = link_to content_tag(:span, '', class: 'caret'), '#', class: 'btn btn-info dropdown-toggle', :'data-toggle' => 'dropdown'
        %ul.dropdown-menu
          %li= link_to 'No priority', '#', :'data-priority' => ''
          %li.divider
          - ticket_priority_collection.each do |priority|
            %li= link_to priority[0], '#', :'data-priority' => priority[1]
    %li.assign-to-user
      %div.btn-group
        = link_to 'Assign to', '#', class: 'btn btn-info'
        = link_to content_tag(:span, '', class: 'caret'), '#', class: 'btn btn-info dropdown-toggle', :'data-toggle' => 'dropdown'
        %ul.dropdown-menu
          %li= link_to 'No assignment', '#', :'data-user-id' => ''
          %li.divider
          - users.each do |user|
            %li= link_to user.username, '#', :'data-user-id' => user.id.to_s
  %div.disabled-overlay
